{
  "functions": {
    "pages/api/*.ts": {
      "maxDuration": 300
    },
    "pages/api/submit-questionnaire.ts": {
      "maxDuration": 300,
      "includeFiles": "utils/fonts/DejaVuSans.ttf"
    },
    "pages/api/submit-evaluation.ts": {
      "maxDuration": 300,
      "includeFiles": "utils/fonts/DejaVuSans.ttf"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "build": {
    "env": {
      "SHARP_IGNORE_GLOBAL_LIBVIPS": "1"
    }
  },
  "env": {
    "SHARP_IGNORE_GLOBAL_LIBVIPS": "1"
  }
} 